@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Должности с максимальными и минимальными окладами</h2>

<table class="table">
	<thead>
		<tr>
			<th scope="col">@Html.Label("Фамилия")</th>
			<th scope="col">@Html.Label("Имя")</th>
			<th scope="col">@Html.Label("Отчество")</th>
			<th scope="col">@Html.Label("Должность")</th>
			<th scope="col"> @Html.Label("Оклад")</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in ViewBag.MinMax)
		{
			<tr>
				<td>@item.Surname</td>
				<td>@item.Name</td>
				<td>@item.Patronymic</td>
				<td>@item.Position</td>
				<td>@item.Salary</td>
			</tr>
		}
	</tbody>
</table>