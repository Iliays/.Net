
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

	<h2>AddNewPosition</h2>


	<div class="form-horizontal">
		<form method="post" action="">
			<div class="form-group">
				<text class="control-label col-md-2"> Введите номер сотрудника </text>
				<div class="col-md-10">
					<input type="number" name="WorkerId" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<text class="control-label col-md-2"> Введите номер должности </text>
				<div class="col-md-10">
					<input type="number" name="PositionId" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<text class="control-label col-md-2"> Ставка </text>
				<div class="col-md-10">
					<input type="number" name="WageRate" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<text class="control-label col-md-2"> Ставка </text>
				<div class="col-md-10">
					<span>Работает</span>
					@Html.RadioButton("Status", "Р", new { htmlAttributes = new { @class = "form-control" } })
					<span>Уволен</span>
					@Html.RadioButton("Status", "У", new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				<text class="control-label col-md-2"> Причина увольнения </text>
				<div class="col-md-10">
					<input type="text" name="WhyDismissal" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<text class="control-label col-md-2"> Дата принятия на работу </text>
				<div class="col-md-10">
					<input type="text" name="DateOfEmployment" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<text class="control-label col-md-2"> Дата увольнения </text>
				<div class="col-md-10">
					<input type="text" name="DateOfDismissal" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<text class="control-label col-md-2"> Месяц получения зарплаты </text>
				<div class="col-md-10">
					<input type="text" name="OneMonthSalary" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<text class="control-label col-md-2"> Год получения зарплаты </text>
				<div class="col-md-10">
					<input type="text" name="YearSalary" class="form-control" />
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Добавить" class="btn btn-default" />
				</div>
			</div>
		</form>
	</div>

	<div>
		@Html.ActionLink("Назад", "HistoryView")
	</div>