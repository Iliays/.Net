@model Laba12.Models.Message

@{
	ViewBag.Title = "Chat";
}

<h2>Новое сообщение</h2>

@using (Html.BeginForm("SendTheNewMessage", "Home", FormMethod.Post))
{
	@Html.AntiForgeryToken()

<div>
	<hr />
	@Html.ValidationSummary(true)


<div class="form-horizontal">
	<hr />
	Кому
	<div class="form-group">
		<div class="col-md-10">
			<input type="text" name="User" />
		</div>
	</div>
	Заголовок
	<div class="form-group">
		<div class="col-md-10">
			@Html.EditorFor(model => model.header)
		</div>
	</div>
	Текст сообщения
	<div class="form-group">
		<div class="col-md-10">
			@Html.EditorFor(model => model.text)
		</div>
	</div>

	<div>
		<input type="submit" value="Отправить" class="btn btn-default" />
	</div>

</div>

</div>
}

<br />
<br />

@using (Html.BeginForm("Main", "Home", FormMethod.Post))
{
	<button class="btn btn-default">Вернуться</button>
}